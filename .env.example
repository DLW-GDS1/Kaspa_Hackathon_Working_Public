# Ports
WEB_PORT=3000
API_PORT=8080
POSTGRES_PORT=5432
REDIS_PORT=6379

# Postgres
POSTGRES_USER=kpay
POSTGRES_PASSWORD=kpay
POSTGRES_DB=kpay

# Prisma
DATABASE_URL=postgresql://kpay:kpay@db:5432/kpay

# App
NODE_ENV=development
API_BASE_URL=http://localhost:8080

# Network selection
# App defaults to Testnet (TN-10). UI lets you toggle to Mainnet.
KASPA_DEFAULT_NETWORK=testnet-10

# Provider config
KASPA_MAINNET_PROVIDER=nownodes
KASPA_TESTNET_PROVIDER=rest

# NOWNodes settings (Mainnet)
KASPA_NOWNODES_API_KEY=change_me
KASPA_MAINNET_REST_URL=https://kas.nownodes.io

# Testnet (TN-10) REST endpoint
KASPA_TESTNET_REST_URL=http://localhost:8000

# Confirmations / acceptance thresholds
KASPA_CONFIRMATIONS=10

# Demo mock fallback (recommended ON as safety net)
KASPA_MOCK_FALLBACK=true
KASPA_MOCK_SEEN_SECONDS=8
KASPA_MOCK_CONFIRMED_SECONDS=20

# Status panel ping timeout
KASPA_STATUS_TIMEOUT_MS=3000
